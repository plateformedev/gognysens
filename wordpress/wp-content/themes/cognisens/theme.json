{
  "$schema": "https://schemas.wp.org/wp/6.4/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "palette": [
        {
          "slug": "black",
          "color": "#000000",
          "name": "Noir"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "Blanc"
        },
        {
          "slug": "stone",
          "color": "#F5F5F0",
          "name": "Pierre"
        },
        {
          "slug": "gray-dark",
          "color": "#333333",
          "name": "Gris fonce"
        },
        {
          "slug": "gray-light",
          "color": "#E5E5E5",
          "name": "Gris clair"
        },
        {
          "slug": "accent",
          "color": "#8B7355",
          "name": "Accent"
        }
      ],
      "gradients": [],
      "duotone": []
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "'Cormorant Garamond', serif",
          "slug": "heading",
          "name": "Titre"
        },
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "body",
          "name": "Corps"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Petit"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Moyen"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Grand"
        },
        {
          "slug": "x-large",
          "size": "1.5rem",
          "name": "Tres grand"
        },
        {
          "slug": "xx-large",
          "size": "2.5rem",
          "name": "Enorme"
        },
        {
          "slug": "hero",
          "size": "3.5rem",
          "name": "Hero"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "slug": "10",
          "size": "0.625rem",
          "name": "XS"
        },
        {
          "slug": "20",
          "size": "1rem",
          "name": "S"
        },
        {
          "slug": "30",
          "size": "1.5rem",
          "name": "M"
        },
        {
          "slug": "40",
          "size": "2.5rem",
          "name": "L"
        },
        {
          "slug": "50",
          "size": "4rem",
          "name": "XL"
        },
        {
          "slug": "60",
          "size": "6rem",
          "name": "XXL"
        },
        {
          "slug": "section",
          "size": "7.5rem",
          "name": "Section"
        }
      ],
      "units": ["px", "rem", "%", "vh", "vw"]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "custom": {
      "spacing": {
        "section": "7.5rem",
        "gap": "2rem"
      },
      "border": {
        "thin": "1px solid var(--wp--preset--color--gray-light)",
        "accent": "2px solid var(--wp--preset--color--accent)"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--gray-dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.7"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "var(--wp--preset--spacing--30)",
        "bottom": "0",
        "left": "var(--wp--preset--spacing--30)"
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--hero)",
          "fontWeight": "500",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em"
        },
        "color": {
          "text": "var(--wp--preset--color--black)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "500",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--black)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "500",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "500"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--black)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--black)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body)",
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "500",
          "letterSpacing": "0.1em",
          "textTransform": "uppercase"
        },
        "border": {
          "radius": "0"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "right": "2rem",
            "bottom": "1rem",
            "left": "2rem"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--gray-dark)"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body)",
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "400",
          "letterSpacing": "0.05em",
          "textTransform": "uppercase"
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600",
          "letterSpacing": "0.1em",
          "textTransform": "uppercase"
        }
      },
      "core/paragraph": {
        "typography": {
          "lineHeight": "1.8"
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--preset--color--accent)",
            "width": "2px"
          }
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--30)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontStyle": "italic"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "page-cabinet",
      "title": "Page Cabinet",
      "postTypes": ["page"]
    },
    {
      "name": "page-expertise",
      "title": "Page Expertise",
      "postTypes": ["page"]
    },
    {
      "name": "page-amo",
      "title": "Page AMO",
      "postTypes": ["page"]
    },
    {
      "name": "page-tarifs",
      "title": "Page Tarifs",
      "postTypes": ["page"]
    },
    {
      "name": "page-contact",
      "title": "Page Contact",
      "postTypes": ["page"]
    },
    {
      "name": "page-legal",
      "title": "Page Legale",
      "postTypes": ["page"]
    }
  ]
}
